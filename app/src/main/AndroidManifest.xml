<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.anuj1.broadspire">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.activity.Activities.activities.LoginActivity"
            android:configChanges="orientation"
            android:label="Broadspire">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.activity.Activities.activities.Menu_Activity"
            android:label="@string/title_activity_menu"
            android:parentActivityName=".Activity.activity.Activities.activities.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activity.activity.Activities.activities.LoginActivity" />
        </activity>
        <activity
            android:name=".Activity.activity.Activities.activities.Claim_PaymentInfo_Activity"
            android:label="Claim/Payment Info" />
        <activity
            android:name=".Activity.activity.Activities.activities.Contact_Adjuster"
            android:label="Adjuster Info" />
        <activity
            android:name=".Activity.activity.Activities.activities.HealthTicket"
            android:label="Health Ticket" />
        <activity
            android:name=".Activity.activity.Activities.activities.DemoActivity"
            android:label="@string/title_activity_demo"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activity.activity.Activities.activities.LocatePhysician_Pharmacy" />
        <activity
            android:name=".Activity.activity.Activities.activities.SocialMedia"
            android:label="@string/title_activity_social" />
        <activity android:name=".Activity.activity.Activities.activities.FAQ" />
        <activity android:name=".Activity.activity.Activities.activities.LocatePhysician" />
        <activity android:name=".Activity.activity.Activities.activities.Registration" />
        <activity android:name=".Activity.activity.Activities.activities.Agreement"></activity>
    </application>

</manifest>